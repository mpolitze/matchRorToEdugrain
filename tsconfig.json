{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    /*"types": [
    ],*/
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2019",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/.yarn/cache/**",
    "package.json"
  ]
}
